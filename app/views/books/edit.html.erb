<h1>Editing Book</h1>
<!--Alert-->
<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
	<div>
		<h5>Title</h5>
		<%= f.text_field :title %>
	</div>
	<div>
		<h5>Body</h5>
		<%= f.text_area :body %>
	</div>
	<div><%= f.submit "Update Book" %></div>
	<h4>
		<%= link_to "Show", book_path(@book.id) %>
		|
		<%= link_to "Back", books_path %>
	</h4>
<% end %>