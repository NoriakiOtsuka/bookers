<h1>Books</h1>
	<table>
		<thead>
			<tr valign = "top">
				<th width = "100" height = "20">Title</th>
				<th width = "400" height = "20">Body</th>
				<th colspan = "3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td width = "20"><%= link_to "Show", book_path(book.id) %></td>
					<td width = "20"><%= link_to "Edit", edit_book_path(book.id) %></td>
					<td width = "20"><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

<h1>New Book</h1>

<%= form_for(@book, url: "/books")  do |f| %>

<!--Alert-->
<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div>
	<h4>Title</h4>
	<%= f.text_field :title %>
</div>
<div>
	<h4>Body</h4>
	<%= f.text_area :body %>
</div>
<div><%= f.submit "Create Book" %></div>

<% end %>
